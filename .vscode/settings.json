{
  // sass compiller
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/public/css/"
    },
  ],
  "liveSassCompile.settings.includeItems": [
    "resources/scss/*",
  ],
  "files.exclude": {
    "node_modules/": true,
    "vendor/": true,
    "app/": true,
    "bootstrap/": true,
    "config/": true,
    "database/": true,
    "tests/": true,
  }
}