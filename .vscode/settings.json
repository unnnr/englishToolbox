{
  // sass compiller
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/app/public/css/",
    },
  ],
  "liveSassCompile.settings.includeItems": [
    "app/src/scss/*",
    "app/src/sass/*",
  ],  

  "files.exclude": {
    "app/node_modules/" : true
  },

  "liveSassCompile.settings.generateMap" : false
}